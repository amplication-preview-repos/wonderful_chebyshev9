datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TodoItem {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  description String?
  completed   Boolean?
  dueDate     DateTime?
  title       String?
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  id         String     @id @default(cuid())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  firstName  String?
  lastName   String?
  username   String     @unique
  email      String?    @unique
  password   String
  roles      Json
  todoItems  TodoItem[]
  keycloakId String?
}
